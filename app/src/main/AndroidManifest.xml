<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppBanHangOnline"
        tools:targetApi="31">
        <activity
            android:name=".activities.SuccessActivity" />
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.AddAddressActivity" />
        <activity android:name=".activities.AddressActivity" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.ShowAllActivity" />
        <activity android:name=".activities.DetailedActivity" />
        <activity android:name=".activities.OnBoardingActivity" />
        <activity
            android:name=".activities.RegistrationActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>